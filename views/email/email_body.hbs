<h3>Order Details</h3>
<h4>Name : {{First_Name}} {{Last_Name}}</h4>
<h4>Address : {{Address1}} {{Address2}}</h4>
<h4>Phone Number : {{Phone}}</h4>
<h4>Order ID : {{Order_Id}}</h4>
<h4>Payment ID : {{Payment_Id}}</h4>

{{#if products}}

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                           
                            <th scope="col">Product</th>
                            <th scope="col" class="text-center">Quantity</th>
                            <th scope="col" class="text-right">Price</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {{# each products}}
                        <tr>
                            
                            <td>{{this.item.title}}</td>
                            <td class="text-center">
                               
                                {{this.qty}}
                                
                            </td>
                            <td class="text-right">Rs.{{this.price}}</td>
                           
                        </tr>
                        {{/each}}
                        <tr>
                           
                            <td></td>
                          
                            <td><strong>Total Quantity</strong></td>
                            <td class="text-right"><strong>{{totalqty}}</strong></td>
                        </tr>
                        <tr>
                          
                            <td></td>
                           
                            <td><strong>Total</strong></td>
                            <td class="text-right"><strong>{{totalPrice}}</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        {{/if}}
    </div>
</div>