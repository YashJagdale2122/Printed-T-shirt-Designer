<div class="row d-flex justify-content-center">
    <div class="col-md-8 ">
        <h1>My Account</h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders}}
        <div class="card text-center mb-4">
            <div class="card-body">
                <ul class="list-group">
                    {{#each this.items}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <img class="image-responsive" style="width: 50px; height:50px;" src="{{this.item.imagePath}}" />
                        {{this.item.title}} | {{this.qty}} units |Size : {{this.size}}
                        <span class="badge bg-primary rounded-pill"> Rs. {{this.price}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="card-footer text-muted">Total Price Rs. {{this.cart.totalPrice}}</div>
        </div>
        {{/each}}
    </div>
</div>