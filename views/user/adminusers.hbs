<div class="container">
    <!-- Sidebar -->
    <div class="sidebar-fixed position-fixed" style="left:0px;">

        <a class="logo-wrapper waves-effect">
            <h2><strong>Printed Tshirt Designer</strong></h2>
        </a>

        <div class="list-group list-group-flush">
            <a href="/user/admin" class="list-group-item list-group-item-action waves-effect">
                <i class="fa fa-chart-pie mr-3"></i>Dashboard
            </a>
            <a href="/user/admin/users" class="list-group-item active list-group-item-action waves-effect" style="background-color : #00695C; color:white;">
                <i class="fa fa-user mr-3"></i>Users
            </a>
            <a href="/user/admin/products" class="list-group-item list-group-item-action waves-effect">
                <i class="fa fa-table mr-3"></i>Products
            </a>
            <a href="/user/admin/orders" class="list-group-item list-group-item-action waves-effect">
                <i class="fa fa-dollar-sign mr-3"></i>Orders
            </a>
            <a href="/user/admin/clipart" class="list-group-item list-group-item-action waves-effect">
                <i class="fa fa-icons mr-3"></i>Clipart
            </a>
            <a href="/user/admin/messages" class="list-group-item list-group-item-action waves-effect">
                <i class="fas fa-envelope mr-3"></i>Messages
            </a>
        </div>

    </div>
    <!-- Sidebar -->

    <!--Main layout-->
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">

            <!-- Heading -->
            <div class="card mb-4 wow fadeIn mar-left">

                <!--Card content-->
                <div class="card-body d-sm-flex justify-content-between">

                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <a href="/user/admin" target="_blank" style="color : #00695C;">Admin Home Page</a>
                        <span>/</span>
                        <span>Users</span>
                    </h4>
                    <!--
                    <form class="d-flex justify-content-center">
                        
                        <input type="search" placeholder="Type your query" aria-label="Search" class="form-control">
                        <button class="btn btn-primary btn-sm my-0 p" type="submit">
                            <i class="fa fa-search"></i>
                        </button>

                    </form>
-->
                </div>

            </div>
            <!-- Heading -->
            <div class="card mar-left">
                <input class="form-control " id="tableSearch" type="text" placeholder="Type to search items">
                <div class="card-body">
                    <div class="row d-flex justify-content-center">
                        <div class="col-sm-6 col-md-4">
                            <div id="success" class="alert alert-success {{#if noMessage}}d-none{{/if}}">
                                {{successMsg}}
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-sm-6 col-md-4">
                            <div id="error" class="alert alert-danger {{#if noError}}d-none{{/if}}">
                                {{errMsg}}
                            </div>
                        </div>
                    </div>
                    <table class="table-sm table-responsive-sm" id="myTable">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">Password</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{this._id}}</td>
                                <td>{{this.email}}</td>
                                <td style="font-size: clamp(0.5rem, 2.5vw, 0.72rem); -webkit-line-clamp: 2;">{{this.password}}</td>
                                <td class="text-right">
                                    <a href="/user/admin/removeuser/{{this._id}}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </main>
    <!--Main layout-->
</div>

<script>
    // Filter table

    $(document).ready(function () {
        $("#tableSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>